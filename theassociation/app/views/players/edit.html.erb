<h1>Edit <%= @player.first_name %>'s Profile </h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
    <p style="color: red"><%= e %></p>
    <% end %>
<% end %>

<form action="/players/<%= @player.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <p>
        <label for="firstName">First Name:</label>
        <input type="text" name="player[first_name]" value="<%= @player.first_name%>">
    </p>
    <p>
        <label for="lastName">Last Name:</label>
        <input type="text" name="player[last_name]" value="<%= @player.last_name%>">
    </p>
    <input type="submit" value="UPDATE">
</form> 
