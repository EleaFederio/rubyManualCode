<%= content_for(:title, "Home")%>
<h1>Listing <%= pluralize(@players.length, "Player") %> in our league</h1>

<div class="jumbotron">
    <table>
        <thead>
            <tr>
                <td>First Name</td>
                <td>Last Name</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            <% @players.each do |player| %>
            <tr>
                <td><%= player.first_name %></td>
                <td><%= player.last_name %></td>
                <td>
                    <%= link_to "Show Profile", player_path(player.id) %>
                    <%= link_to "Edit Profile", player_edit_path(player.id) %>
                    <%= link_to "Delete Player", player_path(player.id), data:{method: :delete, confirm: "do you want to delete #{player.first_name} #{player.last_name}?" } %>
                    <!-- <a href="/players/<%= player.id%>" data-method="delete" data-confirm="do you want to delete <%= player.first_name%> <%= player.last_name%>">Delete Profile</a> -->
                </td>
            </tr>
            <% end%> 
        </tbody>
    </table>
</div>

