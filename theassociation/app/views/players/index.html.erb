<h1>There a <%= @players.count %> of players in our league</h1>

<table>
    <thead>
        <tr>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        <% @players.each do |player| %>
        <tr>
            <td><%= player.first_name %></td>
            <td><%= player.last_name %></td>
            <td>
                <%= link_to "Show Profile", players_show_path(player.id)%>
                <%= link_to "Edit Profile", player_edit_path%>
                <%# <a href="/players/<%= player.id%>/edit">Edit Profile</a> %>
                <%= link_to "Delete Player"%>
                <a href="/players/<%= player.id%>" data-method="delete" data-confirm="do you want to delete <%= player.first_name%> <%= player.last_name%>">Delete Profile</a>
            </td>
        </tr>
        <% end%> 
    </tbody>
</table>

